<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GUIClient.ViewModels"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GUIClient.Views.DashboardView"
             Initialized="OnInitialized">
    
    <Design.DataContext>
        <vm:DashboardViewModel/>
    </Design.DataContext>
   
    
    <DockPanel>
        <TextBlock Text="{Binding StrWelcome}" DockPanel.Dock="Top"/>
        <StackPanel DockPanel.Dock="Left">
            <TextBlock Classes="header" Text="{Binding StrRisksOverTime}"/>
            <lvc:CartesianChart
                Series="{Binding RisksOverTime}" 
                XAxes="{Binding RisksOverTimeXAxis}"
                ZoomMode="X"
                Background="#2e2d2d"
                Width="700" Height="300"/>            
        </StackPanel>

    </DockPanel>
    
</UserControl>
