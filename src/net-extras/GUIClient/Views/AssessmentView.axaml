<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GUIClient.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GUIClient.Views.AssessmentView">
    <Design.DataContext>
        <vm:AssessmentViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="Auto, *">
        <StackPanel Grid.Column="0">
            <TextBlock Classes="header" Text="{Binding StrAssessments, Mode=OneTime}" TextAlignment="Center"/>
            <ListBox Items="{Binding Assessments}" Width="200">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="Red" CornerRadius="4" Padding="4">
                            <TextBlock Text="{Binding .Name}"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
    
</UserControl>
