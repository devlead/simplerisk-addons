<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GUIClient.Settings"
        Title="Settings"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True"
        Width="800" Height="600">
    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <Panel Margin="40">
            <TabControl>
                <TabItem Header="{Binding StrSystem}"  VerticalContentAlignment="Center" Margin="10">
                    <StackPanel Spacing="2">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Name="txtOS" Text="{Binding StrOperationalSystem}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBlock Name="txtOSData" Text="{Binding StrOperationalSystemData}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        </StackPanel>
                        
                        <TextBlock Name="txtHost" Text="Host" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    </StackPanel>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <TextBlock VerticalAlignment="Center" Text="{Binding StrServer}"/>
                    </TabItem.Header>
                    <StackPanel>
                        <TextBlock Text="I am in the triangle page ! I'll put a button to show you that each page contains what you want." HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <Button>A button in the triangle page !</Button>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Panel>
    </Panel>
</Window>
